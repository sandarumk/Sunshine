<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title= "@string/perf_general_edit_text_location"
        android:key="@string/perf_general_edit_text_key"
        android:defaultValue="@string/perf_general_location_default_value"
        android:inputType= "text"
        android:singleLine="true"/>

    <ListPreference
        android:title="@string/perf_general_list_temperature_unit"
        android:key="@string/perf_general_list_key"
        android:entries="@array/temp_units"
        android:entryValues="@array/temp_units_values"
        android:defaultValue="@string/perf_general_list_default"/>

</PreferenceScreen>